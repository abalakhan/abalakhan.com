<%- include('partials/header') %>

<main>
    <div class="project-container container">
        <a class="breadcrumb left" href="/"><h6><i class="material-icons" style="padding-right: 5px; font-size: 20px;">arrow_back</i> back to üè†</h6></a>
        <h1><%= project.title %></h1>
        
        <div class="row">
            <div class="col s12 m8 l8 p-3">
                <div class="project-images">
                    <img class="project-img" src="<%= project.coverImage %>" alt="<%= project.title %>">
                    <p class="project-desc"><%= project.description %></p>
                    <% if (Array.isArray(project.images)) { %>
                        <% project.images.forEach(image => { %>
                            <span><img class="project-img" src="<%= image %>" alt="<%= project.title %>"></span>
                        <% }); %>
                        <% } %>
                </div>
            </div>
            
            <div class="col s12 m4 l4 p-3 d-flex left-align">
                <h5 class="mr-2">Timeline</h5>
                <p class="project-desc"><%= project.timeline %></p>
                <h5>Role</h5>
                <p class="project-desc"><%= project.role %></p>
                <% if (Array.isArray(project.collab) && project.collab.length > 0) { %>
                    <h5 class="mr-2">Teammates</h5>
                    <ul class="project-desc">
                        <% project.collab.forEach(collaborator => { %>
                            <li>
                                <a href="<%= collaborator.website %>" target="_blank" class="tooltipped" data-position="top" data-tooltip="<%= collaborator.name %>">
                                    <img class="collaborator-image" src="<%= collaborator.image %>" alt="<%= collaborator.name %>" />
                                </a>
                            </li>
                        <% }); %>
                    </ul>
                <% } else { %>
                    
                <% } %>
                <h5>Website</h5>
                <a href="<%= project.website %>"><p class="project-website"><%= project.website %></p></a>
                <div class="link-grid">
                    <% if (project.website) { %>
                        <a href="<%= project.liveDemo %>" target="_blank" class="btn-floating btn-small waves-effect waves-light rounded project-button">
                            <i class="material-icons">link</i>
                        </a>
                    <% } %>
                
                    <% if (project.github) { %>
                        <a href="<%= project.github %>" target="_blank" class="btn-floating btn-small waves-effect waves-light rounded project-button">
                            <i class="fa-brands fa-github-alt"></i>
                        </a>
                    <% } %>
                
                    <% if (project.figma) { %>
                        <a href="<%= project.figma %>" target="_blank" class="btn-floating btn-small waves-effect waves-light rounded project-button">
                            <i class="fa-brands fa-figma"></i>
                        </a>
                    <% } %>
                </div>
                <div class="tools-list">
                    <% project.skills.forEach(skill => { %>
                        <span class="skill btn-small filled black-text">
                            <%= skill %>
                        </span>
                    <% }); %>
                </div>
            </div>
        </div>

    </div>
</main>

<%- include('partials/footer') %>